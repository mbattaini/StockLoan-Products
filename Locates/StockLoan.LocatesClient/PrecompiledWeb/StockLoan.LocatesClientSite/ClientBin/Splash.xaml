<Grid
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="LayoutRoot" Background="#FF616265">
    <Border BorderBrush="Black" BorderThickness="2,1,2,2" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" CornerRadius="10" Background="#FFFFFFFF" Padding="0">
        <Border.Effect>
            <DropShadowEffect Color="#00000000" BlurRadius="20" Direction="353"/>
        </Border.Effect>
        <StackPanel>
            <Image Height="144" Source="schweetCompanyLogo.png" Stretch="Fill" Width="208" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="100,25,100,25"/>
            <TextBlock Text="Loading My Kick Ass Application..." HorizontalAlignment="Center" Margin="0,0,0,10" />
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                <ProgressBorder Stroke="#FFB3B3B3" VerticalAlignment="Center" Height="7" Width="150" HorizontalAlignment="Center"/>
                <ProgressBar Fill="#FFB3B3B3" VerticalAlignment="Center" Height="7" Width="0" HorizontalAlignment="Left"/>
            </Grid>
        </StackPanel>
    </Border>
</Grid>
